#compdef dobackup
local -a subcmds
subcmds=('-v:Show version' '-h:Show help' '--init:Initialise by storing access token to .token file' '--list-drops:List all droplets' '--list-backups:List all snapshots with \"dobackup\" in their name' '--list-snaps:List all snapshots' '--list-tagged: List droplets using \"--tag-name\"' '--list-tags:List all used tags' '--list-older-than:List snaps older than, in days' '--tag-server:Add tag to the provided droplet name or id' '--untag-server:Remove tag from the provided droplet name or id'  '--tag-name:To be used with \"--list-tags\", \"--tag-server\" and \"--backup-all\", default value is \"auto-backup\"' '--delete-older-than:Delete backups older than, in days' ''--delete-snaps:Delete the snapshot with given name or id'' '--backup:Shutdown, Backup, Then Restart the given droplet using \"droplet id\"' '--backup-all:Shutdown, Backup, Then Restart all droplets with \"--tag-name\"' '--shutdown:Shutdown, the droplet with given name or id' '--powerup:Powerup, the droplet with given name or id' '--restore-drop:Restore, the droplet with given name or id' '--restore-to:Snapshot id or name, to restore the droplet to')
_describe 'command' subcmds
